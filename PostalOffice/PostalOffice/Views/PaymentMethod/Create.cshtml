@model PaymentMethod
@{
    Layout = "_Layout";
    
    ViewData["Title"] = "Создание способа оплаты";
}

<form class="popup" asp-controller="PaymentMethod" asp-action="Create">
    <div class="popup-inner">
        <p class="addingWorkerPopup">Добавление способа оплаты</p>
        <ul class="popupinput">
            <li style="width:100%;">
                <span>Наименование способа оплаты*</span>
                <input asp-for="PaymentMethodName" required type="text" placeholder="Введите наименование способа оплаты" />
                @Html.ValidationMessageFor(model => model.PaymentMethodName, null, new { style = "color:red" })
            </li>
            
        </ul>
        <a type="button" asp-action="List" asp-controller="PaymentMethod" class="closepopup">X</a>
        <div class="popup_button">
            <button class="popupsubmit" type="submit">
                Создать
            </button>
            <button class="popupclear" type="reset">
                Очистить
            </button>
        </div>
    </div>
</form>

