@model AvailablePayment
@{
    Layout = "_Layout";    
    ViewData["Title"] = "Изменение доступного платежа";
}

<script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<form class="popup" asp-controller="AvailablePayment" asp-action="Edit">
    <div class="popup-inner">
        <p class="addingWorkerPopup">Изменение доступного платежа</p>
        <ul class="popupinput">
            <li style="width:100%;">
                <span>Наименование доступного платежа*</span>
                <input type="hidden" name="Id" value="@Model.Id" />
                <input asp-for="AvailablePaymentName" required type="text" placeholder="Введите наименование доступного платежа" value="@Model.AvailablePaymentName" />
                @Html.ValidationMessageFor(model => model.AvailablePaymentName, null, new { style = "color:red" })
            </li>           
        </ul>
        <a type="button" asp-action="List" asp-controller="AvailablePayment" class="closepopup">X</a>
        <div class="popup_button">
            <button class="popupsubmit" type="submit">
                Сохранить
            </button>   
            @{
                if(Model.CompletedPayment?.Count == 0)
                {
                    <a class="popupdelete" type="button" asp-action="Delete" asp-controller="AvailablePayment" asp-route-id=@Model.Id>Удалить</a>  
                }
            }
                      
        </div>
    </div>
</form>

