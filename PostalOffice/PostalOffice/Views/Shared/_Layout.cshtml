<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PostalOffice</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


    <link rel="stylesheet" href="~/css/site.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/dist/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>





</head>
<body>
    <div class="sidebar">
        <div class="logo-details">
            <a asp-controller="Home" asp-action="Index">
                <i class='bx bxs-envelope icon'></i>
                <p class="logo_name">Почта РБ</p>
            </a>
            <i class='bx bx-menu' id="btn_nav_menu"></i>
        </div>

        <ul class="nav-list">
            @if (User.IsInRole("Администратор"))
            {
                <li id="area_users">
                    <a asp-controller="Worker" asp-action="List">
                        <i id="_users" class='bx bx-user'></i>
                        <span class="links_name">Сотрудники</span>
                    </a>
                    <span class="tooltip">Сотрудники</span>
                </li>
                <script>
                    document.getElementById('area_users').onmouseenter = function () {
                        document.getElementById('_users').classList.add('bx-tada');
                    }
                    document.getElementById('area_users').onmouseleave = function () {
                        document.getElementById('_users').classList.remove('bx-tada');
                    }
                </script>
                <li id="area_positions">
                    <a asp-controller="Position" asp-action="List">
                        <i id="_positions" class='bx bx-user-pin'></i>
                        <span class="links_name">Должности</span>
                    </a>
                    <span class="tooltip">Должности</span>
                </li>
                <script>
                    document.getElementById('area_positions').onmouseenter = function () {
                        document.getElementById('_positions').classList.add('bx-tada');
                    }
                    document.getElementById('area_positions').onmouseleave = function () {
                        document.getElementById('_positions').classList.remove('bx-tada');
                    }
                </script>                
                <script>
                    document.getElementById('area_genders').onmouseenter = function () {
                        document.getElementById('_genders').classList.add('bx-tada');
                    }
                    document.getElementById('area_genders').onmouseleave = function () {
                        document.getElementById('_genders').classList.remove('bx-tada');
                    }
                </script>              

            }

            <li id="area_paymentMethod">
                    <a asp-controller="PaymentMethod" asp-action="List">
                        <i id="_paymentMethod" class='bx bx-wallet'></i>
                        <span class="links_name">Способы оплаты</span>
                    </a>
                    <span class="tooltip">Способы оплаты</span>
            </li>
            <script>
                document.getElementById('area_paymentMethod').onmouseenter = function () {
                    document.getElementById('_paymentMethod').classList.add('bx-tada');
                }
                document.getElementById('area_paymentMethod').onmouseleave = function () {
                    document.getElementById('_paymentMethod').classList.remove('bx-tada');
                }
            </script>

            <li id="area_deliveryCountry">
                <a asp-controller="DeliveryCountry" asp-action="List">
                    <i id="_deliveryCountry" class='bx bxs-city'></i>
                    <span class="links_name">Страны доставки</span>
                </a>
                <span class="tooltip">Страны доставки</span>
            </li>
            <script>
                document.getElementById('area_deliveryCountry').onmouseenter = function () {
                    document.getElementById('_deliveryCountry').classList.add('bx-tada');
                }
                document.getElementById('area_deliveryCountry').onmouseleave = function () {
                    document.getElementById('_deliveryCountry').classList.remove('bx-tada');
                }
            </script>

            <li id="area_availablePayment">
                <a asp-controller="AvailablePayment" asp-action="List">
                    <i id="_availablePayment" class='bx bx-receipt'></i>
                    <span class="links_name">Доступные платежи</span>
                </a>
                <span class="tooltip">Доступные платежи</span>
            </li>
            <script>
                document.getElementById('area_availablePayment').onmouseenter = function () {
                    document.getElementById('_availablePayment').classList.add('bx-tada');
                }
                document.getElementById('area_availablePayment').onmouseleave = function () {
                    document.getElementById('_availablePayment').classList.remove('bx-tada');
                }
            </script>

            <li id="area_goodForSale">
                <a asp-controller="GoodForSale" asp-action="List">
                    <i id="_goodForSale" class='bx bx-cube'></i>
                    <span class="links_name">Товары для продажи</span>
                </a>
                <span class="tooltip">Товары для продажи</span>
            </li>
            <script>
                document.getElementById('area_goodForSale').onmouseenter = function () {
                    document.getElementById('_goodForSale').classList.add('bx-tada');
                }
                document.getElementById('area_goodForSale').onmouseleave = function () {
                    document.getElementById('_goodForSale').classList.remove('bx-tada');
                }
            </script>
            @if (User.IsInRole("Администратор"))
            {
                <li id="area_provider">
                    <a asp-controller="Provider" asp-action="List">
                        <i id="_provider" class='bx bx-user'></i>
                        <span class="links_name">Поставщики</span>
                    </a>
                    <span class="tooltip">Поставщики</span>
                </li>
                <script>
                    document.getElementById('area_provider').onmouseenter = function () {
                    document.getElementById('_provider').classList.add('bx-tada');
                }
                document.getElementById('area_provider').onmouseleave = function () {
                    document.getElementById('_provider').classList.remove('bx-tada');
                }
                </script>
            }

            <li id="area_operation">
                <a asp-controller="Operation" asp-action="List">
                    <i id="_operation" class='bx bx-receipt'></i>
                    <span class="links_name">Операции</span>
                </a>
                <span class="tooltip">Операции</span>
            </li>
            <script>
                document.getElementById('area_operation').onmouseenter = function () {
                    document.getElementById('_operation').classList.add('bx-tada');
                }
                document.getElementById('area_operation').onmouseleave = function () {
                    document.getElementById('_operation').classList.remove('bx-tada');
                }
            </script>




            <li class="profile">
                <div class="profile-details">
                    @{
                        var user = AuthorizedUser.GetInstance();
                        <div class="name_job">
                            <div class="name">@user?.GetWorker()?.LastName @user?.GetWorker()?.FirstName</div>
                            <div class="job">@user?.GetWorker()?.Position?.PositionName</div>
                        </div>
                    }
                </div>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <button>
                        <i class='bx bx-log-out' id="log_out"></i>
                    </button>
                </form>
                <!-- <i class='bx bx-log-out' id="log_out" ></i> -->
            </li>

            <script>
                document.getElementById('log_out').onmouseenter = function () {
                    document.getElementById('log_out').classList.remove('bx-log-out');
                    document.getElementById('log_out').classList.add('bxs-log-out');
                    document.getElementById('log_out').classList.add('bxs-log-out');
                }
                document.getElementById('log_out').onmouseleave = function () {
                    document.getElementById('log_out').classList.remove('bxs-log-out');
                    document.getElementById('log_out').classList.add('bx-log-out');
                }
            </script>
        </ul>
    </div>
    <section class="home-section">
            @RenderBody()
    </section>
    <script>
        let sidebar = document.querySelector(".sidebar");
        let closeBtn = document.querySelector("#btn_nav_menu");
        closeBtn.addEventListener("click", () => {
            sidebar.classList.toggle("open");
            menuBtnChange();//calling the function(optional)
        });

        searchBtn.addEventListener("click", () => { // Sidebar open when you click on the search iocn
            sidebar.classList.toggle("open");
            menuBtnChange(); //calling the function(optional)
        });

        // following are the code to change sidebar button(optional)
        function menuBtnChange() {
            if (sidebar.classList.contains("open")) {
                closeBtn.classList.replace("bx-menu", "bx-menu-alt-right");//replacing the iocns class
            } else {
                closeBtn.classList.replace("bx-menu-alt-right", "bx-menu");//replacing the iocns class
            }
        }
    </script>
</body>
</html>   
    <script src="~/js/site.js"></script>
