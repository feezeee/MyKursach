@model IEnumerable<MyKursach2.Models.Worker>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Сотрудники";
}


<div class="table-responsive" style="height: 100%;">
    
    <h1 class="text-center">Сотрудники</h1>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Дата рождения</th>
                <th>Email</th>
                <th>Должность</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var el in Model)
            {
            <tr>
                <th scope="row">
                    @el.Id
                </th>
                <td>
                    @el.LastName
                </td>
                <td>
                    @el.FirstName
                </td>
                <td>
                    @el.DateOfBirth.ToShortDateString()
                </td>
                <td>
                    @el.Email
                </td>
                <td>
                    @el.Position.PositionName
                </td>
            </tr>
            }
        </tbody>
    </table>    
</div>


