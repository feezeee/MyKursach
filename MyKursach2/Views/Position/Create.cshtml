@model MyKursach2.Models.Position
@{
    Layout = "_Layout";
}

<form class="popup" asp-controller="Position" asp-action="Create">
    <div class="popup-inner">
        <p class="addingWorkerPopup">Добавление должности</p>
        <ul class="popupinput">
            <li style="width:100%;">
                <span>Наименование должности*</span>
                <input asp-for="PositionName" required type="text" placeholder="Введите наименование должности" />
                @Html.ValidationMessageFor(model => model.PositionName, null, new { style = "color:red" })
            </li>         
        </ul>
        <a type="button" asp-action="List" asp-controller="Position" class="closepopup">X</a>
        <div class="popup_button">
            <button class="popupsubmit" type="submit">
                Создать
            </button>
            <button class="popupclear" type="reset">
                Очистить
            </button>
        </div>

    </div>
</form>

