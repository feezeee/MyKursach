<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MyKursach</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/dist/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

</head>
<body style="height: max-content; background-color: rgb(242, 255, 255);">
    <header>
        <nav class="mx-auto navbar navbar-expand-lg navbar-light border-bottom " style="background-color: rgb(181, 234, 255); max-width: 1440px;">
            <a class="navbar-brand" asp-action="Index">Почта РБ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="list-group list-group-horizontal-lg " style="list-style: none;">
                    <li class="dropdown mx-3">
                        <a class="dropdown-toggle" type="button" id="dropdownMenuButtonStaff" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Сотрудники
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonStaff">
                            <a class="dropdown-item" asp-action="Workers">Список сотрудников</a>
                            <a class="dropdown-item" asp-action="Positions">Должности</a>
                        </div>

                    </li>
                    <li class="mx-3 dropdown">
                        <a class="dropdown-toggle" type="button" id="dropdownMenuButtonOperation" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Операция
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonOperation">
                            <a class="dropdown-item" asp-action="NewOperation">Новая операция</a>
                            <a class="dropdown-item" asp-action="Operations">Список операций</a>
                        </div>
                    </li>

                    <li class="mx-3 dropdown">
                        <a class="dropdown-toggle" type="button" id="dropdownMenuButtonOrder" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Заказы
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonOrder">
                            <a class="dropdown-item" href="#">Список заказов</a>
                        </div>

                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="mx-auto bg-light" style="height: 860px; max-width: 1440px;">
        @RenderBody()
    </main>

    <footer class="mx-auto" style="max-width: 1440px; background-color: rgb(0, 103, 121); height: 70px;">
    </footer>

</body>
</html>
